{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "pr",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin", 
        "digest"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ]
}
